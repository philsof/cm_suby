<div align="center">
  <%= simple_form_for @contact, :html => {:class => 'class-goes-here' } do |f| %>
    <%= f.input :name, :required => true, :placeholder =>"Name" %>
    <%= f.input :email, :required => true, :placeholder => "Email" %>
    <%= f.input :message, :as => :text, :required => true, :placeholder => "Your Message", :input_html => { :rows => 7 , :style => 'width: 100%'} %>
    <div>
      </br>
      <%= f.button :submit, 'send message', :class=> "class-goes-here" %>
    </div>
  <% end %>
</div>